<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.apelikecoder.turnup"
      android:versionName="0.9.1" android:versionCode="3">
    <application android:icon="@drawable/turnup48" android:label="@string/app_name">
        <activity android:name=".Main"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".AlarmListener">
            <intent-filter>
               <action android:name="com.android.alarmclock.ALARM_ALERT" />
            </intent-filter>
        </receiver>
        <receiver android:name=".IncomingCallListener">
			<intent-filter>
				<action	android:name="android.intent.action.PHONE_STATE"/>
			</intent-filter>
        </receiver>
        <activity android:name=".AlarmSettings"/>
        <activity android:name=".RingerSettings"/>
        <service android:name=".RingVolumeControlService"/>
        <service android:name=".AlarmVolumeControlService"/>

    </application>
    <uses-sdk android:minSdkVersion="4" />
    <user-permission android:name="android.permission.READ_PHONE_STATE"/>
    
    <meta-data android:name="com.a0soft.gphone.aTrackDog.webURL" android:value="http://turn-up.googlecode.com" />
    <meta-data android:name="com.a0soft.gphone.aTrackDog.dlURL" android:value="http://turn-up.googlecode.com/files/turn-up-0.9.1.apk" />
    <meta-data android:name="com.a0soft.gphone.aTrackDog.noMarket" android:value="true" />
    <meta-data android:name="com.a0soft.gphone.aTrackDog.testVersion" android:value="3" />
    
</manifest> 
